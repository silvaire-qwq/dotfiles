#!/usr/bin/env bash

## Copyright (C) 2020-2022 Aditya Shakya <adi1090x@gmail.com>

## Simple Script To Pick Color Quickly.

color=$(hyprpicker)
image=/tmp/${color}.png

main() {
	if [[ "$color" ]]; then
		# copy color code to clipboard
		echo $color | tr -d "\n" | wl-copy
		# generate preview
		convert -size 48x48 xc:"$color" ${image}
		# notify about it
		notify-send -h string:x-canonical-private-synchronous:sys-notify -i ${image} "颜色为 $color, 已复制到剪贴板。
记住，是 $color 哦!"
	fi
}

# Run the script
main
